        .subsection {
            background-color: #f8fafc;
            border-left: 4px solid #2563eb;
            padding: 15px 20px;
            margin: 20px 0;
            border-radius: 0 8px 8px 0;
        }
        
        .subsection-title {
            color: #1e293b;
            margin-top: 0;
            font-size: 18px;
        }
        
        .image-container {
            background-color: #e2e8f0;
            border: 1px dashed #cbd5e1;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            margin: 15px 0;
            color: #64748b;
            font-style: italic;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .image-container img {
            max-width: 100%;
            height: auto;
            border-radius: 6px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        
        .fixed-image {
            width: 100%;
            height: 300px;
            object-fit: contain;
            background-color: #f8fafc;
        }
        
